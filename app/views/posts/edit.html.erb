<%# cssは商品出品のものを併用しています。
app/assets/stylesheets/posts/new.css %>

<div class="post-sell-contents">
  <header class="post-sell-header">
    <%= link_to image_tag('hobbyring-logo.png' , size: '185x50'), "/" %>

  </header>
  <div class="post-sell-main">
    <h2 class="posts-sell-title">投稿画面</h2>
    <%= form_with model: @post, local: true do |f| %>
    <% render 'shared/error_messages', model: @post %>

    <%# 投稿画像 %>
    <div class="img-upload">
      <div class="weight-bold-text">
        出品画像
      </div>
      <div class="click-upload">
        <p>
          クリックしてファイルをアップロード
        </p>
        <%= f.file_field :image, id:"post-image" %>
      </div>
    </div>
    <%# /投稿画像 %>

    <%# 投稿説明 %>
    <div class="new-posts">
      <div class="posts-explain">
        <div class="weight-bold-text">
          自由
        </div>
        <%= f.text_area :text, class:"posts-text", id:"item-info", placeholder:"商品の説明（必須 1,000文字まで）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。" ,rows:"7" ,maxlength:"1000" %>
      </div>
    </div>
    <%# /投稿説明 %>

    <%# 下部ボタン %>
    <div class="sell-btn-contents">
      <%= f.submit "変更する" ,class:"sell-btn" %>
      <%=link_to 'もどる', "#", class:"back-btn" %>
    </div>
    <%# /下部ボタン %>
  </div>
  <% end %>

  <footer class="posts-sell-footer">
    <ul class="menu">
      <li><a href="#">プライバシーポリシー</a></li>
      <li><a href="#">特定商取引に関する表記</a></li>
    </ul>
    <%= link_to image_tag('hobbyring-logo.png' , size: '185x50'), "/" %>
    <p class="inc">
      ©︎HobbyRing,Inc.
    </p>
  </footer>
</div>